<Window x:Class="NGestionDesk.MateriaPrimaList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista de Materia Prima" Height="400" Width="525" Initialized="OnInitialized">
    <Grid Margin="0,0,0, 0">
        <DataGrid x:Name="dtgLista" Margin="10,10,16,52" RenderTransformOrigin="0.5,0.5" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" MouseDoubleClick="dtgLista_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Descripcion" Binding="{Binding Descripcion}" />
                <DataGridTextColumn Header="Unidad" Binding="{Binding Unidad.Nombre}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnAgregar" Content="Agregar" Margin="0,0,16,10" Click="OnClick" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <Button x:Name="btnBorrar" Content="Borrar" Margin="10,0,0,10" Click="btnBorrar_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75"/>

    </Grid>
</Window>
